<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp">


        <TextView
            android:id="@+id/tipdegistirid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tiptik"
            android:text="Sayýyý Ýkiliye"
            android:textColor="#fdf3f3"

            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp">


            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/dokuz"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/okk"
                tools:ignore="VectorDrawableCompat" />


            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bir"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/zero"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/zero"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bir"
                tools:ignore="VectorDrawableCompat" />




        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="40dp">


        <EditText
            android:id="@+id/yazikutusu"


            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/buton"

            android:drawableLeft="@drawable/yazii"
            android:ems="10"
            android:hint="Bir sayý giriniz..."
            android:inputType="number"
            android:paddingBottom="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"

            android:textSize="20sp" />


        <Button
            android:id="@+id/btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn"
            android:onClick="btntik"
            android:text="Hesapla"
            android:textColor="#fdf3f3"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#00d4ff"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/sonuctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"

            android:paddingLeft="20dp"
            android:background="@drawable/cevapback"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:drawableLeft="@drawable/solcvp"
            android:drawableRight="@drawable/cvp"
            android:textColor="#434141"
            android:textSize="22sp" />

    </LinearLayout>